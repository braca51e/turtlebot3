<!--
  Launch file for radar turtlebot3
 -->
<launch>
  <arg name="multi_robot_name" default=""/>
  <arg name="set_lidar_frame_id" default="base_scan"/>
  <arg name="set_radar_frame_id" default="ti_mmwave"/>
  <arg name="scan_method" default="lidar" doc="scan type [lidar, radar]"/>

  <include file="$(find turtlebot3_bringup)/launch/turtlebot3_core.launch">
    <arg name="multi_robot_name" value="$(arg multi_robot_name)"/>
  </include>

  <group if="$(eval arg('scan_method') == 'lidar')">
    <include file="$(find turtlebot3_bringup)/launch/turtlebot3_lidar.launch">
      <arg name="set_frame_id" value="$(arg set_lidar_frame_id)"/>
    </include>
  </group>

  <group if="$(eval arg('scan_method') == 'radar')">
    <!-- Radar 6843ISK -->
    <include file="$(find turtlebot3_radar)/launch/turtlebot3_radar.launch">
      <arg name="set_radar_frame_id" value="$(arg set_radar_frame_id)"/>
    </include>

    <!-- Raspberry camera -->
    <node pkg="jetson_camera" type="jetson_camera_node" name="main_camera" clear_params="true" output="screen">
      <param name="cap_width" value="1280"/>
      <param name="cap_height" value="720"/>
      <param name="width" value="1280"/>
      <param name="height" value="720"/>
      <param name="fps" value="24"/>
      <param name="flip_method" value="6"/>

      <param name="frame_id" value="rasp_cam_frame"/>
      <param name="camera_info_url" value="file://$(find jetson_camera)/camera_info/raspicam_v2.yaml"/>
    </node>
  </group>
  
  <node pkg="turtlebot3_bringup" type="turtlebot3_diagnostics" name="turtlebot3_diagnostics" output="screen"/>
</launch>
